  <form action="/confirmation" class="centerclass" method="POST">
    <div class=" battery-availability container-fluid tablef">
      <div class="row">
        <% batteries.forEach(function(b){ %>
        <% if(b.available == true){ %>
        <div class="col-sm-2 p-6 text-center">
          <p>Battery #<%= b.bnumber %> </p>
          <!---sm-3 p-4-->
          <figure class="center-block">
            <img src="/image/WeChargeLogo.png" class="imagemod" alt="">
            <figcaption>Available</figcaption>
            <div data-toggle="buttons">
              <label class="btn btn-success ">
                <input type="radio" name="battery" value="<%= b.id %>" autocomplete="off" /> Rent
              </label>
            </div>
          </figure>
        </div>
        <% }  else {%>
        <div class="col-sm-2 p-6 nobattery text-center">
            <p>Battery #<%= b.bnumber %></p>
          <figure class="center-block">
            <img src="/image/WeChargeLogo.png" class="imagemod " alt="">
            <figcaption>Not Available</figcaption>
          </figure>
        </div>
        <%} %>
        <% }) %>
      </div>
    </div>
    <div class="text-center">
      <select id="choosecard" name="cardnum" class="form-group">
        <option value="" disabled selected>Please Select Payment Method</option>
        <% payment.forEach(function(p){ %>
        <option value="<%= p.cardNumber %>"><%= p.cardNumber %></option>
        <% }) %>
      </select>
      <div>
      <button class="btn btn-primary" type="submit">confirm</button>
      <a href="/return" class="btn btn-warning">Return Charger</a>
      </div>
    </div>
  </form>



